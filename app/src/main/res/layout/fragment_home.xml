<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.recyclerview.widget.LinearLayoutManager" />

        <variable
            name="viewModel"
            type="com.app.weather.presentation.home.HomeFragmentViewModel" />

        <variable
            name="viewState"
            type="com.app.weather.presentation.core.BaseViewState&lt;com.app.weather.data.db.entity.ForecastEntity&gt;" />
    </data>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        tools:context=".presentation.dashboard.DashboardFragment">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:visibility="@{!viewState.isLoading()}">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:checkable="false"
                android:checked="true"
                android:clickable="false"
                android:text="@string/today"
                android:textColor="@color/chipTextColor"
                app:chipBackgroundColor="@color/chipItemBackgroundColor" />

            <include
                android:id="@+id/container_forecast"
                layout="@layout/layout_home_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chipToday"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp" />

            <TextView
                android:id="@+id/textViewForecastHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/container_forecast"
                android:layout_marginStart="16dp"
                android:text="@string/pinned_locations"
                android:textColor="@color/mainTextColor"
                android:textSize="19sp"
                android:textStyle="bold"
                app:visibility="@{!viewModel.pinnedLocations.empty}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerForecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewForecastHeader"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                app:setLayoutManager="@{LinearLayoutManager.HORIZONTAL}"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_forecast" />
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@android:color/holo_red_light"
            app:cardCornerRadius="0dp"
            app:cardElevation="16dp"
            app:strokeColor="@android:color/holo_red_dark"
            app:strokeWidth="2dp"
            app:visibility="@{viewState.shouldShowErrorMessage()}">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="24dp"
                android:paddingBottom="12dp"
                android:text="@{viewState.shouldShowErrorMessage()?viewState.errorMessage:@string/unexpected_exception}"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:drawableEndCompat="@android:drawable/stat_notify_error"
                tools:text="Status code : 500 Internal server error!" />

        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:visibility="@{viewState.isLoading()}" />

    </RelativeLayout>
</layout>
